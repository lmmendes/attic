# ===========================================
# Attic - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# --------------------------------------
# Database Configuration
# --------------------------------------
POSTGRES_USER=attic
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=attic

# --------------------------------------
# S3/Object Storage Configuration
# --------------------------------------
# For AWS S3
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# For MinIO/LocalStack (development)
# S3_ENDPOINT=http://localhost:4566
# S3_REGION=us-east-1
# S3_BUCKET=attic-attachments
# S3_ACCESS_KEY=test
# S3_SECRET_KEY=test

# --------------------------------------
# OIDC/Keycloak Configuration
# --------------------------------------
OIDC_ISSUER=https://your-keycloak-domain/realms/attic
OIDC_CLIENT_ID=attic-web

# For development with local Keycloak
# OIDC_ISSUER=http://localhost:8180/realms/attic
# OIDC_CLIENT_ID=attic-web

# Optional: Disable auth for development
# AUTH_DISABLED=true

# --------------------------------------
# Frontend Session Configuration
# --------------------------------------
# Generate with: openssl rand -base64 48
OIDC_SESSION_SECRET=your-48-char-session-secret-here
OIDC_TOKEN_KEY=your-token-encryption-key-here

# --------------------------------------
# Keycloak Admin (for production setup)
# --------------------------------------
KEYCLOAK_HOSTNAME=auth.yourdomain.com
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your-admin-password
KEYCLOAK_DB=keycloak

# --------------------------------------
# Optional: Backend Configuration
# --------------------------------------
# PORT=8080
