# ===========================================
# Attic - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# --------------------------------------
# Database Configuration
# --------------------------------------
POSTGRES_USER=attic
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=attic

# --------------------------------------
# S3/Object Storage Configuration
# --------------------------------------
# For AWS S3
ATTIC_S3_ENDPOINT=https://s3.amazonaws.com
ATTIC_S3_REGION=us-east-1
ATTIC_S3_BUCKET=your-bucket-name
ATTIC_S3_ACCESS_KEY=your-access-key
ATTIC_S3_SECRET_KEY=your-secret-key

# For MinIO/LocalStack (development)
# ATTIC_S3_ENDPOINT=http://localhost:4566
# ATTIC_S3_REGION=us-east-1
# ATTIC_S3_BUCKET=attic-attachments
# ATTIC_S3_ACCESS_KEY=test
# ATTIC_S3_SECRET_KEY=test

# --------------------------------------
# OIDC/Keycloak Configuration
# --------------------------------------
ATTIC_OIDC_ISSUER_URL=https://your-keycloak-domain/realms/attic
ATTIC_OIDC_CLIENT_ID=attic-web
ATTIC_OIDC_CLIENT_SECRET=your-client-secret-here

# For development with local Keycloak
# ATTIC_OIDC_ISSUER_URL=http://localhost:8180/realms/attic
# ATTIC_OIDC_CLIENT_ID=attic-web
# ATTIC_OIDC_CLIENT_SECRET=

# Optional: Disable auth for development
# ATTIC_AUTH_DISABLED=true

# --------------------------------------
# Frontend Session Configuration
# --------------------------------------
# Generate with: openssl rand -base64 48
OIDC_SESSION_SECRET=your-48-char-session-secret-here
OIDC_TOKEN_KEY=your-token-encryption-key-here

# --------------------------------------
# Keycloak Admin (for production setup)
# --------------------------------------
KEYCLOAK_HOSTNAME=auth.yourdomain.com
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your-admin-password
KEYCLOAK_DB=keycloak

# --------------------------------------
# Optional: Backend Configuration
# --------------------------------------
# ATTIC_PORT=8080
# ATTIC_BASE_URL=http://localhost:8080
# ATTIC_CORS_ORIGINS=http://localhost:3000
# ATTIC_SESSION_SECRET=change-me-in-production-32chars!

# --------------------------------------
# Local Storage Configuration
# --------------------------------------
# Used when S3 credentials are not configured
# ATTIC_LOCAL_STORAGE_PATH=/data/uploads

# File ownership (useful in Docker containers)
# Set PUID/PGID to match your host user for proper file permissions
# Find your user ID with: id -u
# Find your group ID with: id -g
# ATTIC_PUID=1000
# ATTIC_PGID=1000
